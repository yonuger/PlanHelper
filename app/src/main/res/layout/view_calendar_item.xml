<?xml version="1.0" encoding="utf-8"?>
<com.young.planhelper.mvp.home.view.calendarview.CalendarItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/cv_view_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="1"
        android:id="@+id/tv_calendar_day"
        android:textColor="@color/red"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="国庆节"
        android:id="@+id/tv_calendar_holiday"
        android:textColor="@color/blue"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/tv_calendar_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="内容"
        android:layout_marginLeft="0.5dp"
        android:layout_marginRight="0.5dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:background="@color/light_pink"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/tv_calendar_content_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="+1"
        android:textColor="@color/blue" />
</com.young.planhelper.mvp.home.view.calendarview.CalendarItemView>