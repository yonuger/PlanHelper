<?xml version="1.0" encoding="utf-8"?>
<com.young.planhelper.mvp.friend.view.chat.FriendChatDetailItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:id="@+id/friend_chat_detial_item_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/tv_friend_chat_detail_item_time"
        android:text="21:00"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_chat_detail_item_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/civ_friend_chat_detail_item" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@mipmap/ic_chat_detail_l"/>

                <TextView
                    android:id="@+id/tv_friend_chat_detail_item_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_chat_detail_r"
                    android:text="ffrfr" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_chat_detail_item_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_friend_chat_detail_item_content_r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_chat_detail_l"
                    android:text="ffrfr" />


                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="8dp"
                    android:background="@mipmap/ic_chat_detail_r"/>
            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/civ_friend_chat_detail_item_r" />
        </LinearLayout>

    </RelativeLayout>

</com.young.planhelper.mvp.friend.view.chat.FriendChatDetailItemView>