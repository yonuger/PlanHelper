<?xml version="1.0" encoding="utf-8"?>
<com.young.planhelper.mvp.friend.view.add.FriendAddNewItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:id="@+id/friend_add_new_item_view"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_friend_new_friend_item"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_plan_bg_01"/>

    <Button
        android:id="@+id/btn_friend_new_friend_item"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="接受"
        android:textColor="@color/white"
        android:background="@color/cyan_week_view_current"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_friend_new_friend_item_receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="已添加"
        android:textColor="@color/gray_01"/>

    <TextView
        android:layout_toLeftOf="@+id/btn_friend_new_friend_item"
        android:layout_toRightOf="@+id/civ_friend_new_friend_item"
        android:id="@+id/tv_friend_new_friend_item_account"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:text="呵呵哒"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"/>

</com.young.planhelper.mvp.friend.view.add.FriendAddNewItemView>
