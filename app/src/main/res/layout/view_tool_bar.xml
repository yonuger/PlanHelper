<?xml version="1.0" encoding="utf-8"?>
<com.young.planhelper.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/toolbar"
    android:background="@color/white">

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@mipmap/ic_home_menu"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:id="@+id/iv_toolbar_menu" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@mipmap/ic_home_add"
        android:id="@+id/iv_toolbar_add"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:id="@+id/ll_toolbar_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/tv_toolbar_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="2017年2月"/>

        <ImageView
            android:id="@+id/iv_toolbar_content"
            android:layout_width="16dp"
            android:layout_height="15dp"
            android:src="@mipmap/ic_home_down"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="3dp"
            android:layout_gravity="bottom"/>
    </LinearLayout>


</com.young.planhelper.widget.Toolbar>